<%= form_with(model: material) do |f| %>
    <div class="form-group">
      <%= f.label 'Nome', class: "form-label" %><br/>
      <%= f.text_field :name, class: "form-control mt-2" %>
    </div>

    <div class="form-group">
      <%= f.label 'Descrição', class: "form-label mt-3" %><br/>
      <%= f.text_area :description, class: "form-control mt-2" %>
    </div>

    <% if !edit %>
      <div class="form-group">
        <%= f.label 'Quantidade', class: "form-label mt-3" %><br/>
        <%= f.number_field :quantity, class: "form-control mt-2" %>
      </div>

      <div class="form-group">
        <%= f.submit "Adicionar", class: "btn btn-secondary button-card my-4" %>
      </div>
    <% else %>
      <div class="form-group">
        <%= f.submit "Editar", class: "btn btn-secondary button-card my-4" %>
      </div>
    <% end%>
  <% end %>