<%= render 'header' %>

<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <div class="card card-materials-index container">
          <div class="card-header">
            <div class="container">
              <h2>Logs Entrada/Saída > <%= @material.name %></h2>
            </div>
          </div>
          <table class="table table-materials-index">
            <tr>
              <th style="width: 30%; padding-left: 28px;">Usuário</th>
              <th style="width: 20%">Entrada/Saída</th>
              <th style="width: 20%">Quantidade</th>
              <th style="width: 30%">Data/Hora</th>
            </tr>
            <% if @logs.empty? %>
              <tr>
                <td colspan="4">
                  Nenhum registro.
                </td>
              </tr>
            <% else %>
              <% @logs.map do |log| %>
                <tr>
                  <td style="padding-left: 28px"><%= log.user.username %></td>
                  <td><%= log.method %></td>
                  <td><%= log.quantity %></td>
                  <td><%= convert_date(log.created_at) %></td>
                </tr>
              <% end%>
            <% end %>
          </table>
        </div>
      </div>
      <div class="col-lg-1"></div>
    </div>
  </div>
</main>