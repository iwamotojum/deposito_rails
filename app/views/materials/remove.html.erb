<%= render 'header' %>

<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <div class="card card-materials-index container">
          <div class="card-header">
            <div class="container">
              <div class="mt-2">
                <h2>Materiais > Sa√≠da</h2>
              </div>
            </div>
          </div>
          <div class="card-body form-card-body">
            <%= form_with(model: @material, url: material_output_path(@material) ) do |f| %>
              <div class="form-group">
                <%= f.label 'Nome', class: "form-label" %><br/>
                <%= f.text_field :name, class: "form-control mt-2", disabled: true %>
              </div>

              <div class="form-group">
                <%= f.label 'Quantidade', class: "form-label mt-3"  %><br/>
                <%= f.number_field :quantity, class: "form-control mt-2", value: 0, max: 0%>
              </div>

              <div class="form-group">
                <%= f.submit "Retirar", class: "btn btn-secondary button-card my-4" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-1"></div>
    </div>
  </div>
</main>