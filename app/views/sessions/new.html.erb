<main>
  <div class="login-title">
    <h1>Depósito</h1>
    <h2>Login</h2>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-0 col-lg-2"></div>
      <div class="col-md-12 col-lg-8">
        <div class="container">
          <div class="card card-login" width="100%">
            <div class="row py-3">
              <div class="col-2"></div>
              <div class="col-8">
                <div class="card-body card-body-edit">
                  <%= form_with(scope: :session, url: login_path) do |f| %>
                    <div class="form-group">
                      <%= f.label :Usuário %><br/>
                      <%= f.text_field :username, class: "form-control mt-2" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :Senha, class: 'mt-3' %><br/>
                      <%= f.password_field :password, class: "form-control mt-2" %>
                    </div>
                    
                    <div class="form-group">
                      <%= f.submit "Entrar", class: "btn btn-secondary button-card my-4" %>
                    </div>
                  <% end %>
                </div>
                <div class="col-2"></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-0 col-lg-2"></div>
      </div>
    </div>
  </div>
</main>